<h1 align="center">THE BEWD BLOG</h1>


<%= link_to 'Add a new article', new_article_path, class: "btn btn-primary" %>
<p></p>
<div class="panel panel-default">
  <div class="panel-heading">Article archive</div>
  <div class="panel-body">
    <p>Checkout all the articles published on the BEWD Blog below.</p>
  </div>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>
